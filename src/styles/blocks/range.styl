.range
	&__headline
		display flex
		justify-content space-between
		margin-bottom 8px

		input
			background none
			font-size 14px
			color #fff
			font-weight 30
			font-family FuturaPT, sans-serif
			border none
			outline none
	&__hint
		font-size 14px
		color $gray

	.noUi-connect
		height 1px
		top calc(50% - 1px)
		background #fff

	.noUi-target
		background none
		height 16px
		border none
		box-shadow none

		&::before
			content ''
			display block
			width 100%
			height 1px
			background $primaryLight
			position absolute
			left 0
			top calc(50% - 1px)

	.noUi-horizontal .noUi-handle
		width 16px
		height 16px
		border 1px solid #fff
		background none
		top 0
		right -8px !important
		box-shadow none
		border-radius 0
		background $primary
		outline none

		&::before
		&::after
			display none