.field
	font-size 16px

	&__input
		display block
		background none
		outline none
		border none
		font-size inherit
		font-family FuturaPT, sans-serif
		width 100%

	&__line
		height 1px
		background $primaryLight
		margin-top 8px

		&::before
			content ''
			display block
			height 1px
			background #fff
			transition transform 350ms
			transform scaleX(0)
			transform-origin 0

		^[0]__input:focus + &::before
		^[0]__input:not(:invalid) + &::before
			transition-duration 175ms
			transform scaleX(1)

		.form-invalid ^[0]__input:invalid + &::before
			transition-duration 175ms
			transform scaleX(1) !important
			background $error !important

	&__error-msg
		display block
		margin-top 4px
		color $error
		font-size 12px
		opacity 0
		visibility hidden
		transition opacity 350ms, visibility 350ms

		.form-invalid ^[0]__input:invalid ~ &
			visibility visible
			opacity 1
			transition-duration 175ms

	&_theme
		&_light
			^[0]__input
				color #fff

				&::placeholder
					color rgba(255,255,255,.3)

		&_big
			font-size 24px